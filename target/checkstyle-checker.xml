<?xml version="1.0"?>
<!DOCTYPE module PUBLIC
          "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
          "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!-- Основна конфігурація для Checkstyle -->
<module name="Checker">
  <!-- Перевірки структури коду -->
  <module name="TreeWalker">
  
    <!-- Стиль використання анотацій -->
    <module name="AnnotationUseStyle"/>
    
    <!-- Запобігає використанню зірочки для імпорту -->
    <module name="AvoidStarImport"/>
    
    <!-- Перевірка імен констант -->
    <module name="ConstantName"/>
    
    <!-- Перевірка на порожні блоки -->
    <module name="EmptyBlock"/>
    
    <!-- Перевірка на використання null в equals -->
    <module name="EqualsAvoidNull"/>
    
    <!-- Перевірка на final класи -->
    <module name="FinalClass"/>
    
    <!-- Запобігає створенню конструкторів у утилітних класах -->
    <module name="HideUtilityClassConstructor"/>
    
    <!-- Перевірка на некоректне використання виключень -->
    <module name="IllegalCatch"/>
    
    <!-- Забороняє імпорти з певних пакетів, наприклад, java.util -->
    <module name="IllegalImport">
      <property name="illegalPkgs" value="java.util"/>
    </module>
    
    <!-- Перевірка на невалідні throws в методах -->
    <module name="IllegalThrows"/>
    
    <!-- Перевірка на порядок оголошення класів, інтерфейсів та типів -->
    <module name="InnerTypeLast"/>
    
    <!-- Перевірка на коректність використання інтерфейсів -->
    <module name="InterfaceIsType"/>
    
    <!-- Перевірка на місце розташування фігурних дужок -->
    <module name="LeftCurly"/>
    
    <!-- Перевірка довжини рядка, максимальна довжина 100 символів -->
    <module name="LineLength">
      <property name="max" value="100"/>
    </module>
    
    <!-- Перевірка імен методів -->
    <module name="MethodName"/>
    
    <!-- Перевірка правильного порядку модифікаторів -->
    <module name="ModifierOrder"/>
    
    <!-- Перевірка на необхідність фігурних дужок для однорядкових блоків -->
    <module name="NeedBraces"/>
    
    <!-- Запобігає використанню переносів рядка в недозволених місцях -->
    <module name="NoLineWrap"/>
    
    <!-- Забороняє мати більше одного класу в одному файлі -->
    <module name="OneTopLevelClass"/>
    
    <!-- Перевірка на відповідність імені файлу і класу -->
    <module name="OuterTypeFilename"/>
    
    <!-- Перевірка на наявність декларації пакету на початку файлу -->
    <module name="PackageDeclaration"/>
    
    <!-- Перевірка імен параметрів методів -->
    <module name="ParameterName"/>
    
    <!-- Перевірка на зайві модифікатори -->
    <module name="RedundantModifier"/>
    
    <!-- Перевірка на коректність розташування правої фігурної дужки -->
    <module name="RightCurly"/>
    
    <!-- Перевірка на правильне іменування статичних змінних -->
    <module name="StaticVariableName"/>
    
    <!-- Перевірка імен класів -->
    <module name="TypeName"/>
    
    <!-- Перевірка на використання правильного модифікатора видимості -->
    <module name="VisibilityModifier"/>
  </module>
</module>